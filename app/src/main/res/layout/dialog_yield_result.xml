<!-- res/layout/dialog_yield_result.xml -->
<LinearLayout
    android:id="@+id/dialog_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_dialog_background"> <!-- Use the rounded drawable -->

    <TextView
        android:id="@+id/predicted_yield_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predicted Yield"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/predicted_yield_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_gravity="center" />
</LinearLayout>
